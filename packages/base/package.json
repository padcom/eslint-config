{
  "name": "@padcom/eslint-config-base",
  "version": "0.0.6",
  "description": "My preferred code style. Might work for you, might not...",
  "author": "Matthias Hryniszak <padcom@gmail.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "repository" : {
    "type" : "git",
    "url" : "github:padcom/eslint-config"
  },
  "main": "index.js",
  "scripts": {
    "test": "node --experimental-vm-modules ../../node_modules/.bin/jest",
    "test:watch": "npm run test -- --watchAll",
    "lint": "eslint -c index.js index.js jest.*.[m]js tests/**.[m]js",
    "lint:watch": "npm run lint -- --watch",
    "prepublishOnly": "npm install && npm test"
  },
  "peerDependencies": {
    "eslint": "^8.33.0"
  },
  "dependencies": {
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jsdoc": "^39.7.5",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-regexp": "^1.12.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.1"
  }
}
